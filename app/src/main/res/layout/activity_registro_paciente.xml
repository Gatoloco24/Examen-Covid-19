<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/activity_toolbar2">

    </include>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/rut_del_paciente"
                android:textSize="28dp"
                android:textColor="@color/divider"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="16dp">
            </TextView>
            <EditText
                android:id="@+id/rut_paciente"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="180dp"
                android:hint="193368956"
                android:textStyle="bold"
                android:textSize="23dp"
                android:textAlignment="center">
            </EditText>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nombre"
                android:textSize="28dp"
                android:textColor="@color/divider"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="16dp">
            </TextView>
            <EditText
                android:id="@+id/nombre_paciente"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="30dp"
                android:textAlignment="center">
            </EditText>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Apellido"
                android:textSize="28dp"
                android:textColor="@color/divider"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="16dp">
            </TextView>
            <EditText
                android:id="@+id/apellido_paciente"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="30dp"
                android:textAlignment="center">
            </EditText>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Fecha"
                android:textSize="28dp"
                android:textColor="@color/divider"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="16dp">
            </TextView>
            <DatePicker
                android:id="@+id/fecha_ingreso"
                android:layout_width="wrap_content"
                android:layout_height="393dp"
                android:layout_marginLeft="70dp"
                android:layout_marginRight="30dp">
            </DatePicker>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Area de Trabajo"
                android:textSize="28dp"
                android:textColor="@color/divider"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="16dp">
            </TextView>
            <Spinner
                android:id="@+id/area_trabajo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            </Spinner>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Presenta sintomas de covid ?"
                    android:textSize="23dp"
                    android:textColor="@color/divider"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="16dp">
                </TextView>

                <Switch
                    android:id="@+id/sintomas"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="12dp"
                    android:scaleX="1.7"
                    android:scaleY="1.7"></Switch>
            </LinearLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Temperatura"
                android:textSize="28dp"
                android:textColor="@color/divider"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="16dp">
            </TextView>
            <EditText
                android:id="@+id/temperatura_paciente"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="30dp"
                android:textAlignment="center"
                android:inputType="numberDecimal">
            </EditText>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Presenta tos ?"
                    android:textSize="28dp"
                    android:textColor="@color/divider"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="16dp">
                </TextView>
                <Switch
                    android:id="@+id/tos"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:scaleX="1.7"
                    android:scaleY="1.7"
                    android:layout_marginTop="12dp"
                    android:layout_marginLeft="40dp">
                </Switch>
            </LinearLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Presion arterial"
                android:textSize="28dp"
                android:textColor="@color/divider"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="16dp">
            </TextView>
            <EditText
                android:id="@+id/presion_paciente"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="30dp"
                android:textAlignment="center"
                android:inputType="number">
            </EditText>

            <Button
                android:id="@+id/button"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="Registrar"
                android:textSize="25dp"
                android:textStyle="bold" />

        </LinearLayout>
    </ScrollView>






</LinearLayout>