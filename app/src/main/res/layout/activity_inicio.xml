<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.Toolbar xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/toolbar"
    android:background="@color/primary_dark"
    android:minHeight="?attr/actionBarSize"
    android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
    app:popupTheme="@style/Theme.AppCompat.Light">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="50dp"
        android:layout_marginRight="50dp">
        <ImageView
            android:src="@drawable/ic_baseline_local_library_24"
            android:layout_width="@dimen/ancho_imagen_toolbar"
            android:layout_height="@dimen/ancho_imagen_toolbar"
            android:layout_gravity="center_horizontal">

        </ImageView>
        <TextView
            android:id="@+id/titulo_toolbar_txt"
            android:layout_gravity="center_horizontal"
            android:text="@string/login"
            android:textSize="50sp"
            android:textStyle="bold"
            android:layout_marginLeft="3dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/icons"/>
        <TextView
            android:layout_gravity="center_vertical"
            android:text="@string/Usuario"
            android:textSize="30sp"
            android:textStyle="normal"
            android:layout_marginTop="30sp"
            android:layout_marginLeft="30sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"/>
        <EditText
            android:id="@+id/usuario_txt"
            android:layout_marginTop="5sp"
            android:layout_marginLeft="30sp"
            android:layout_marginRight="30sp"
            android:layout_width="320sp"
            android:layout_height="60sp"
            android:gravity="center_vertical"/>
        <TextView
            android:layout_gravity="center_vertical"
            android:text="@string/Password"
            android:textSize="30sp"
            android:textStyle="normal"
            android:layout_marginTop="10sp"
            android:layout_marginLeft="30sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"/>
        <EditText
            android:id="@+id/password_txt"
            android:layout_marginTop="5sp"
            android:layout_marginLeft="30sp"
            android:layout_marginRight="30sp"
            android:layout_width="320sp"
            android:layout_height="60sp"
            android:gravity="center_vertical"/>

        <Button
            android:id="@+id/button_xd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="50dp"
            android:layout_marginRight="50dp"
            android:background="@color/primary_dark"
            android:onClick="Siguiente"
            android:text=">"
            android:textSize="50dp"
            android:textStyle="bold" />


    </LinearLayout>
</androidx.appcompat.widget.Toolbar>